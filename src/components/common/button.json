{
  "collectionName": "components_common_buttons",
  "info": {
    "displayName": "Button",
    "icon": "cursor",
    "description": ""
  },
  "options": {},
  "attributes": {
    "Type": {
      "type": "enumeration",
      "enum": [
        "link",
        "modal",
        "pdf",
        "submit"
      ],
      "default": "link",
      "required": true
    },
    "Text": {
      "type": "string"
    },
    "Href": {
      "type": "string"
    },
    "Icon": {
      "type": "string"
    },
    "TextColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "BgColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "BorderColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "BorderWidth": {
      "type": "string"
    },
    "BorderRadius": {
      "type": "string"
    }
  }
}
